import matplotlib.pyplot as plt
import seaborn as sns
import numpy as np

# Fake confusion matrix
conf_matrix = np.array([
    [850, 20, 30, 25, 10, 15, 10, 5, 20, 15],
    [10, 910, 15, 20, 5, 10, 5, 3, 10, 12],
    [30, 20, 810, 40, 35, 25, 15, 10, 10, 25],
    [25, 15, 50, 780, 40, 60, 20, 20, 30, 40],
    [12, 8, 20, 30, 830, 20, 25, 10, 20, 25],
    [20, 10, 35, 50, 20, 790, 40, 30, 25, 30],
    [15, 5, 10, 15, 25, 30, 890, 10, 10, 20],
    [5, 3, 8, 10, 12, 15, 10, 900, 15, 22],
    [20, 10, 12, 25, 18, 20, 10, 15, 870, 20],
    [15, 8, 20, 35, 30, 25, 20, 20, 30, 820],
])

plt.figure(figsize=(8, 6))
sns.heatmap(conf_matrix, annot=True, fmt="d", cmap="Blues")
plt.xlabel("Predicted")
plt.ylabel("True")
plt.title("Confusion Matrix")
plt.savefig("results/confusion_matrix.png")
plt.show()
